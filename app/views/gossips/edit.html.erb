<%= form_tag url_for(action: 'update'), method: "patch" do %>
<input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>

<div class="form-group">
  <%= label_tag '(Nouveau) Titre' %>
</br>
<%= text_field_tag 'gossip_title', value = @gossip.title %>

</div>

<div class="form-group">
<%= label_tag 'Racontes les (Nouveaux) bails' %>
</br>
<%= text_field_tag 'gossip_content', value = @gossip.content %>
</div>

<%= submit_tag "Recti-B*tcher" %>

<% end %>

<div class="contain">
  <h1 class="py-1 text-center">Les Gossips chauds près de :
    <%= City.all[params[:id].to_i-1].name %>
  </h1>

<div class="row" style="padding: 2% 12%;">


  <% @gossips.each do |gossip| %>

    <div class="col-lg-3 mb-3 p-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= gossip.title %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= gossip.created_at.strftime('%a %d %b') %>
          </h6>
          <p class="card-text pt-2" style="height: 90px;">
            <%= gossip.content %>
          </p>
          <a href="/gossips/<%=gossip.id%>" class="card-link read-btn text-ligth">Lire plus</a>

          <a href="/author/<%=gossip.user.id%>" class="card-link">Posté par
            <%=gossip.user.first_name%></a>
        </div>
      </div>
    </div>
  <% end %>
</div>
